<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onLoad">
    <StackLayout id="menuContainer">
            <TabView selectedIndexChanged="indexChange" id="tabNavigation">
        <TabView.items>
            <TabViewItem title="Morsify">
                <TabViewItem.view>
                        <StackLayout class="morsifyStack">
                            <GridLayout columns="*, *, *, *" rows="1*, 1*, 1*, 1*, 1*, 1*, 1*" >
                                <TextView text="{{ textToMorse }}" hint="enter text to morsify" editable="true" class="morsifyTextView" col="0" row="0" colSpan="3" rowSpan="2"  />
                                <Button text="Encode Text" col="3" row="0" rowSpan="2" class="funcButton" tap="onEncodeButtonTap"/>
                                <TextView text="{{ morseToText }}" hint="enter morse to decode" editable="true" class="morsifyTextView" col="0" row="2" colSpan="3" rowSpan="2" />
                                <Button text="Decode Morse" col="3" row="2" rowSpan="2" tap="" class="funcButton"/>
                                <Button text="Generate Light Morse Code" col="0" row="4" colSpan="4" tap="onCreateLightTap" class="morsifyButton"/>
                                <Button text="Create File with Morse Code" col="0" row="5" colSpan="4"  tap="onCreateFileTap" class="morsifyButton"/>
                                <Button text="Send Morse Code File via Email" col="0" row="6" colSpan="4"  tap="onSendFileViaMailTap" class="morsifyButton"/>
                            </GridLayout>
                        </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Quiz">
                <TabViewItem.view>
                    <StackLayout class="quizStack">
                            <GridLayout columns="*, *, *, *" rows="1*, 1*, 1*, 1*" >
                                <TextView text = "{{ maskedRandomWordForTextLabel }}" hint="enter text to morsify" editable="false" class="fetchedWordTextView" col="0" row="0" colSpan="3" rowSpan="1" />
                                <Button text="FETCH!" col="3" row="0" rowSpan="1" class="btn" tap="fetchRandomWordFromApi" />
                                <TextView text = "{{ userDecodedWordAttempt }}" hint="decoded morse word..." editable="true" class="decodedWordTextView" col="0" row="1" colSpan="3" rowSpan="1" />
                                <Button text="DECODE" col="3" row="1" rowSpan="1" class="btn" tap="checkDecodedWord"/>
                                <Button text="UNMASK WORD" col="0" row="2" rowSpan="1" colspan="2" class="btn" tap="unmaskWord"/>
                                <Button text="PLAY WORD" col="2" row="2" rowSpan="1" colspan="2" class="btn" tap="playMaskedWord"/>
                                <TextView text="{{ userDecodedWordResult }}" editable="false" class="decodedResultTextView" col="0" row="4" colSpan="4" rowSpan="1" />
                            </GridLayout>
                        </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Settings">
                <TabViewItem.view>
                    <GridLayout columns="auto, *, auto" rows="auto, auto, *" >
                        <Label text="Delay between codes" col="0" row="0" />
                        <Slider id="morseDelaySlider" propertyChange="changeSliderValues" minValue="{{ sliderDelayMinValue }}" maxValue="{{ sliderDelayMaxValue }}" value="{{ sliderDelayCurrentValue }}" col="1" row="0" />
                        <Label text="{{ sliderDelayCurrentValue }}" col="2" row="0" />

                        <Label text="Morse code volume" col="0" row="1" />
                        <Slider id="morseCodeVolumeSlider" propertyChange="changeSliderValues" minValue="{{ sliderVolumeMinValue }}" maxValue="{{ sliderVolumeMaxValue }}" value="{{ sliderVolumeCurrentValue }}" col="1" row="1" />
                        <Label text="{{ sliderVolumeCurrentValue }}" col="2" row="1" />
                    </GridLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Alphabet">
                <TabViewItem.view>
                    <StackLayout >
                        <Label text="Alphabet to Morse code with sound generator" id="morseAlphabetLabel" />

                        <ListView  id="morseAlphabetListView" itemTap="onListViewTap" items="{{ myMorseItems }}">     
                            <ListView.itemTemplate >
                                <GridLayout columns="*, *, auto">
                                   <Label text="{{ letter }}" col="0" textWrap="true" class="morseLetterLabel" />
                                   <Label text="{{ code }}" col="1" textWrap="true" class="morseLetterLabel" />
                                   <Image src="~/res/play_button.png" col="2" class="playButton" id="playImage" stretch="aspectFit"/>
                                </GridLayout>
                            </ListView.itemTemplate>
                        </ListView>
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>
    </StackLayout>

</Page>