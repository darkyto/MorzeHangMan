<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onLoad">
    <TabView selectedIndexChanged="indexChange" id="tabNavigation">
        <TabView.items>
            <TabViewItem title="Morsify">
                <TabViewItem.view>
                    <StackLayout>
                        <Label text="This will be the text to morse code section..." id="morsifyLabel" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Quiz">
                <TabViewItem.view>
                    <StackLayout>
                        <Label text="This will be quiz section..." id="quizLabel" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Settings">
                <TabViewItem.view>
                    <StackLayout>
                    	<Label text="This will be settings section..." id="settingsLabel" />
                        <Slider propertyChange="change" minValue="{{ minValue }}" maxValue="{{ maxvalue }}" value=" {{ sliderValue }}" />
                        <Label text="{{ sliderValue }}" textWrap="true" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Alphabet">
                <TabViewItem.view>
                    <StackLayout>
                    	<Label text="This will be morse alphabet section..." id="morseAlphabetLabel" />
                      	<ListView id="morseAlphabetListView" tap="onListViewTap">
                      		<Label text="{{ $value }}" horizontalAlignment="right" />
                      	</ListView>
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>
</Page>